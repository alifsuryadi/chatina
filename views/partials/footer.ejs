    <!-- Profile -->
        <div class="edit-main-profil">
            <div class="edit-profile-container">
                <div class="profile-center">
                    <img src="Images/people.jpg" alt="Profile">
                    <div class="edit-profile">
                        <i data-feather="edit-2"></i>
                    </div>
                </div>
                <form action="/" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" value="<%= user.name %>" disabled>  
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" name="email" id="email" value="<%= user.email %>" disabled>
                    </div>
                    <div class="button-group">
                        <button type="submit">Save</button>
                        <div id="cancel-edit-profil"> <a href="">Cancel</a></div>
                </div>
            </div>
    </form>


    <div class="setting-popup">
        <div class="settings-container">
            <div class="settings-header">
                <div class="settings-title">
                    <p>Settings</p>
                </div>
                <div class="settings-close" id="close-settings">
                    <i data-feather="x"></i>
                </div>
            </div>
    
            <hr>
    
            <div class="theme-container">
                <div class="theme-title">
                    <p>Theme</p>
                </div>
                <div class="theme-option-list">
                    <select id="theme-selector">
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="logout-popup">
        <div class="logout-container">
            <div class="logout-header">
                <p>Do you want to Log out?</p>
            </div>
            <div class="button-container">
                <div class="button-yes">
                    <p><a href="/login" style="text-decoration: none; color: white;">Yes</a></p>
                </div>
                <div class="button-no">
                    <p>No</p>
                </div>
            </div>
        </div>
    </div>

    <div id="coming-popup" class="coming-popup">
        <div class="popup-content">
          <p>Fitur ini belum tersedia</p>
          <button class="close" id="close-popup">Tutup</button>
        </div>
    </div>
    
    
    </body>
</html>
